<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/sample_holder_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sample_holder_view"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewHolder" />

        <RadioButton
            android:id="@+id/sample_holder_list"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListHolder" />
        <RadioButton
            android:id="@+id/sample_holder_grid"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GridHolder" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/sample_position_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sample_position_bottom"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom" />

        <RadioButton
            android:id="@+id/sample_position_center"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center" />

        <RadioButton
            android:id="@+id/sample_position_top"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/sample_checkBox_show_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ShowHeader" />

        <CheckBox
            android:id="@+id/sample_checkBox_show_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ShowFooter" />

        <CheckBox
            android:id="@+id/sample_checkBox_expanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Expanded" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/sample_checkBox_fixed_header"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="FixedHeader" />

        <CheckBox
            android:id="@+id/sample_checkBox_fixed_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FixedFooter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List count" />

        <EditText
            android:id="@+id/sample_editText_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="12"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="grid columns" />

            <EditText
                android:id="@+id/sample_editText_column"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="3"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/example_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyDialog" />

    </LinearLayout>

</LinearLayout>